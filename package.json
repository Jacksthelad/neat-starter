{
  "type": "module",
  "scripts": {
    "start": "npm-run-all --parallel css serve",
    "serve": "eleventy --serve --config=eleventy.config.js --input=src",
    "eleventy": "eleventy --watch --config=eleventy.config.js --input=src",
    "debug": "cross-env DEBUG=* eleventy --config=eleventy.config.js --input=src",
    "css": "postcss src/static/css/tailwind.css --o _site/static/css/style.css --watch",
    "build": "cross-env NODE_ENV=production eleventy --config=eleventy.config.js --input=src && cross-env NODE_ENV=production postcss src/static/css/tailwind.css --o _site/static/css/style.css"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.1",
    "@11ty/eleventy-img": "^4.0.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.2.0",
    "@tailwindcss/typography": "^0.5.16",
    "alpinejs": "^3.14.9",
    "cross-env": "^7.0.3",
    "cssnano": "^7.0.7",
    "html-minifier": "^4.0.0",
    "js-yaml": "^4.1.0",
    "luxon": "^3.6.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^9.1.0",
    "prismjs": "^1.30.0",
    "tailwindcss": "^3.4.17"
  },
  "dependencies": {
    "@11ty/eleventy-upgrade-help": "^3.0.1",
    "@quasibit/eleventy-plugin-sitemap": "^2.2.0",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.4"
  }
}
